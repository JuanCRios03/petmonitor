<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="Home"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#F0D0D0"
            android:textColor="#494249"
            android:layout_margin="8dp"
            android:fontFamily="@font/titulos"
            android:padding="6dp"/>

        <LinearLayout
            android:id="@+id/layoutSafeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/btnHome"
            android:background="#F9F9F9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de vacunas"
                android:textSize="25dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:fontFamily="@font/titulos"
                android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgMascota"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gato"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="-30dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona una de sus mascotas"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/titulos"
                android:gravity="center" />
            <Spinner
                android:id="@+id/spinnerMascotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Selecciona una mascota" />

            <EditText
                android:id="@+id/fechaVacunacion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Fecha de VacunaciÃ³n"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/titulos"
                android:gravity="center"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/tipoVacuna"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Tipo de Vacuna"
                android:gravity="center"
                android:fontFamily="@font/titulos"
                android:inputType="text"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/dosis"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center"
                android:hint="Dosis"
                android:inputType="text"
                android:fontFamily="@font/titulos"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/lote"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center"
                android:hint="Lote"
                android:inputType="text"
                android:fontFamily="@font/titulos"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/veterinario"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center"
                android:hint="Veterinario"
                android:inputType="text"
                android:fontFamily="@font/titulos"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/observaciones"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center"
                android:hint="Observaciones"
                android:inputType="text"
                android:fontFamily="@font/titulos"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Guardar Vacuna"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#75DC5E"
                android:fontFamily="@font/titulos"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
