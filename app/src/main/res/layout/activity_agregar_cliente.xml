<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6F7FF"
    android:id="@+id/main"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:text="Cuentanos sobre tu"
                android:fontFamily="@font/titulos"
                android:textColor="#000000"
                android:textSize="35sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="left"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:fontFamily="@font/titulos"
                android:layout_gravity="left"
                android:textColor="#222222"
                android:textSize="50sp"
                android:layout_marginTop="-40dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cual es su nombre"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/titulos"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edittext"
                android:drawableEnd="@drawable/ic_arrow_dropdown"
                android:fontFamily="@font/titulos"
                android:hint="Camilo, Alejandra"
                android:paddingHorizontal="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/grayHint"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cual es su correo"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/titulos"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etCorreoCliente"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:hint="ejemplo@gmail.com"
                android:fontFamily="@font/titulos"
                android:drawableEnd="@drawable/ic_arrow_dropdown"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/grayHint"
                android:textColor="#000000"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnGuardarCliente"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:text="Guardar"
                android:fontFamily="@font/titulos"
                android:textSize="30sp"
                android:backgroundTint="@color/greenButton"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>

