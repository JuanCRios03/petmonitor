<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/de_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordatorio de medicacion"
            android:fontFamily="@font/titulos"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tu mascota"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/mascotaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"/>

        <EditText
            android:id="@+id/medicamento"
            android:hint="Medicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/descripcion"
            android:hint="DescripciÃ³n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/frecuenciaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"/>

        <EditText
            android:id="@+id/hora"
            android:hint="Hora de inicio (HH:mm)"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/fechaInicio"
            android:hint="Fecha Inicio"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/fechaFin"
            android:hint="Fecha Fin"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnGuardarTratamiento"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:text="Guardar Tratamiento"
            android:fontFamily="@font/titulos"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/greenButton"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:text="Volver"
            android:fontFamily="@font/titulos"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/redButton"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
