<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:text="Home"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#F0D0D0"
        android:textColor="#494249"
        android:layout_margin="8dp"
        android:padding="6dp"/>

    <LinearLayout
        android:id="@+id/layoutSafeZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/btnHome"
        android:background="#F9F9F9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Zona Segura"
            android:textSize="25dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/zonasegura"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zonasegura"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-30dp" />

        <EditText
            android:id="@+id/etLatitude"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ingrese la Latitud. Ej: 4.60971"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:paddingVertical="12dp" />


        <EditText
            android:id="@+id/etLongitude"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ingrese la Longitud. Ej: -74.08175"
            android:gravity="center"
            android:inputType="numberDecimal|numberSigned"
            android:paddingVertical="12dp" />


        <EditText
            android:id="@+id/etRadius"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center"
            android:hint="Ingrese el radio (m). Ej: 50"
            android:inputType="numberDecimal"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnVerMapa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ver mapa"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#E0A669"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    </RelativeLayout>
</ScrollView>


