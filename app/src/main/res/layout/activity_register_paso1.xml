<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empecemos"
            android:fontFamily="@font/titulos"
            android:textSize="60sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/de_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="con tu registro"
            android:fontFamily="@font/titulos"
            android:textSize="40sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="-65dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register"
            app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="¿Cuál es tu nombre?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bryan, Juan"
            android:backgroundTint="#3DF28C"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu apellido?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ríos, Contreras"
            android:backgroundTint="#3DF28C"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu gmail?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo@gmail.com"
            android:inputType="textEmailAddress"
            android:backgroundTint="#3DF28C"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#3DF28C"
            android:padding="12dp"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
