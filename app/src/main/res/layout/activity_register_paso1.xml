<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empecemos"
            android:fontFamily="@font/titulos"
            android:textSize="60sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/de_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="con tu registro"
            android:fontFamily="@font/titulos"
            android:textSize="40sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="-65dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register"
            app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuál es tu nombre"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/titulos"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText"  />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bryan, Juan"
            android:drawableEnd="@drawable/ic_arrow_dropdown"
            android:textColorHint="@color/grayHint"
            android:fontFamily="@font/titulos"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuál es tu apellido"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/titulos"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ríos, Contreras"
            android:drawableEnd="@drawable/ic_arrow_dropdown"
            android:textColorHint="@color/grayHint"
            android:fontFamily="@font/titulos"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuál es tu gmail"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/titulos"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText"  />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo@gmail.com"
            android:drawableEnd="@drawable/ic_arrow_dropdown"
            android:textColorHint="@color/grayHint"
            android:fontFamily="@font/titulos"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:text="Siguiente"
            android:fontFamily="@font/titulos"
            android:textSize="30sp"
            android:backgroundTint="@color/greenButton"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
