<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F9F7FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:text="Reporte de Actividadesn"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:fontFamily="@font/titulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:shadowColor="#AAAAAA"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:layout_marginTop="40dp"/>

        <!-- Imagen decorativa -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/reporte"
            android:contentDescription="DecoraciÃ³n"
            android:layout_marginBottom="25dp" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinnerMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Fecha inicio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha inicio:"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seleccionar fecha"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Fecha fin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha fin:"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnFechaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seleccionar fecha"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Resultados -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="280dp"
            android:layout_height="76dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/greenButton"
            android:fontFamily="@font/titulos"
            android:padding="16dp"
            android:text="Consultar"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <!-- Exportar PDF -->
        <Button
            android:id="@+id/btnExportarPDF"
            android:text="Exportar a PDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
