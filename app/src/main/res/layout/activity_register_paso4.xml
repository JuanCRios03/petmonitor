<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:gravity="top|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cual es su edad"
        android:textSize="27sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/spinnerEdad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:hint="5 aÃ±os"
        android:drawableEnd="@drawable/ic_arrow_dropdown"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="#00FFA3"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnAgregarEdad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Agregar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:backgroundTint="#00FFA3"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:backgroundTint="#FF6B6B" />

</LinearLayout>


