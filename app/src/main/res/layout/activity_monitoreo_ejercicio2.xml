<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvResumenTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgResumen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/child_with_dog2"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp" />

        <!-- Fila 1: Distancia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFD966"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distancia\nrecorrida:"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDistancia"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="1km"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Fila 2: Duración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFD966"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duracion:"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDuracion"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="60m"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Fila 3: Calorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFD966"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calorias\nestimadas:"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtCalorias"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="300cal"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Botón -->
        <Button
            android:id="@+id/btnVolverInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOLVER AL INICIO"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#00FFB0"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
